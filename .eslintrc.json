{
  "env": {
    "node": true,
    "es2020": true,
    "jest": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-console": "off",
    "semi": ["warn", "always"],
    "eqeqeq": ["error", "always"],
    "no-var": "off"
  },
  "ignorePatterns": ["frontend/js/tracking.js", "frontend/js/country-codes.js", "node_modules/"]
}
