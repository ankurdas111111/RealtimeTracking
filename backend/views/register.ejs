<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="theme-color" content="#2563eb">
  <title>Register - Kinnect</title>
  <link rel="icon" href="/favicon.svg" type="image/svg+xml">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/design-system.css">
  <link rel="stylesheet" href="/css/auth.css">
</head>
<body class="auth-page">
  <noscript><div class="auth-noscript"><h2>JavaScript Required</h2><p>Please enable JavaScript.</p></div></noscript>

  <!-- Animated background -->
  <div class="auth-bg"><div class="auth-bg-blob"></div></div>

  <!-- Branding side (desktop only) -->
  <div class="auth-brand">
    <div class="auth-brand-logo">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="10" r="3"/><path d="M12 2a8 8 0 0 0-8 8c0 1.892.402 3.13 1.5 4.5L12 22l6.5-7.5c1.098-1.37 1.5-2.608 1.5-4.5a8 8 0 0 0-8-8z"/></svg>
    </div>
    <h1>Kinnect</h1>
    <p>Your family, always close. Track, share, and stay connected in real time.</p>
    <p class="text-xs text-muted" style="margin-top:var(--space-2);opacity:0.7;">Kinnect = Kin + Connect</p>
  </div>

  <!-- Form side -->
  <div class="auth-form-area">
    <div class="auth-card">
      <h2>Create account</h2>
      <p class="subtitle">Sign up to start tracking and sharing</p>

      <% if (error) { %>
        <div class="auth-error">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><line x1="12" y1="8" x2="12" y2="12"/><line x1="12" y1="16" x2="12.01" y2="16"/></svg>
          <%= error %>
        </div>
      <% } %>

      <form method="POST" action="/register" id="registerForm">
        <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
        <input type="hidden" name="contact_type" id="contactType" value="email">

        <!-- Name fields -->
        <div class="auth-name-row">
          <div class="auth-field">
            <label for="first_name">First name</label>
            <input id="first_name" name="first_name" class="input" autocomplete="given-name" required autofocus placeholder="John" />
          </div>
          <div class="auth-field">
            <label for="last_name">Last name</label>
            <input id="last_name" name="last_name" class="input" autocomplete="family-name" placeholder="Doe" />
          </div>
        </div>

        <!-- Password -->
        <div class="auth-field">
          <label for="password">Password</label>
          <input id="password" name="password" type="password" class="input" autocomplete="new-password" required />
          <span class="auth-hint">Minimum 6 characters</span>
        </div>

        <!-- Confirm password -->
        <div class="auth-field">
          <label for="confirm">Confirm password</label>
          <input id="confirm" name="confirm" type="password" class="input" autocomplete="new-password" required />
        </div>

        <!-- Contact method label + toggle -->
        <div class="auth-field" style="margin-bottom: var(--space-2);">
          <label>Contact method</label>
        </div>
        <div class="auth-toggle">
          <button type="button" class="auth-toggle-btn active" id="toggleEmail" aria-label="Use email">Email</button>
          <button type="button" class="auth-toggle-btn" id="toggleMobile" aria-label="Use mobile number">Mobile</button>
        </div>

        <!-- Email field -->
        <div class="auth-field" id="emailField">
          <label for="email_input">Email address</label>
          <input id="email_input" name="contact_value" type="email" class="input" autocomplete="email" placeholder="you@example.com" required />
          <span class="auth-hint" id="emailHint">Used by others to find and add you as a contact</span>
        </div>

        <!-- Mobile field -->
        <div class="auth-field" id="mobileField" style="display:none;">
          <label>Mobile number</label>
          <div class="auth-phone-row">
            <select class="auth-cc-select" id="regCountryCode" aria-label="Country code"></select>
            <input id="mobile_input" type="tel" class="input" autocomplete="tel-national" inputmode="numeric" placeholder="9876543210" />
          </div>
          <span class="auth-hint" id="mobileHint">Used by others to find and add you as a contact</span>
        </div>

        <button class="auth-submit" type="submit" aria-label="Create account">Create account</button>
      </form>

      <script src="/js/country-codes.js"></script>
      <script nonce="<%= cspNonce %>">
      (function() {
        var emailBtn = document.getElementById('toggleEmail');
        var mobileBtn = document.getElementById('toggleMobile');
        var contactType = document.getElementById('contactType');
        var emailField = document.getElementById('emailField');
        var mobileField = document.getElementById('mobileField');
        var emailInput = document.getElementById('email_input');
        var mobileInput = document.getElementById('mobile_input');
        var emailHint = document.getElementById('emailHint');
        var mobileHint = document.getElementById('mobileHint');
        var ccSelect = document.getElementById('regCountryCode');
        var form = document.getElementById('registerForm');
        var CC = window.CountryCodes;

        // Theme
        (function initTheme() {
          var saved = localStorage.getItem('theme');
          if (saved) { document.documentElement.setAttribute('data-theme', saved); }
        })();

        // Populate country code dropdown
        CC.COUNTRY_CODES.forEach(function(c) {
          var opt = document.createElement('option');
          opt.value = c[1];
          opt.textContent = c[3] + ' ' + c[0];
          opt.dataset.dial = c[0];
          opt.dataset.min = c[4];
          opt.dataset.max = c[5];
          ccSelect.appendChild(opt);
        });
        ccSelect.value = 'IN';

        function setEmail() {
          emailBtn.classList.add('active'); mobileBtn.classList.remove('active');
          contactType.value = 'email';
          emailField.style.display = '';
          mobileField.style.display = 'none';
          emailInput.name = 'contact_value';
          emailInput.required = true;
          mobileInput.removeAttribute('name');
          mobileInput.required = false;
          emailHint.textContent = 'Used by others to find and add you as a contact';
          emailHint.classList.remove('error');
        }
        function setMobile() {
          mobileBtn.classList.add('active'); emailBtn.classList.remove('active');
          contactType.value = 'mobile';
          emailField.style.display = 'none';
          mobileField.style.display = '';
          mobileInput.required = true;
          emailInput.removeAttribute('name');
          emailInput.required = false;
          updateMobilePlaceholder();
          mobileHint.textContent = 'Used by others to find and add you as a contact';
          mobileHint.classList.remove('error');
        }

        function getSelectedCountry() {
          var opt = ccSelect.options[ccSelect.selectedIndex];
          return { dial: opt.dataset.dial, min: parseInt(opt.dataset.min), max: parseInt(opt.dataset.max), name: opt.textContent };
        }
        function updateMobilePlaceholder() {
          var c = getSelectedCountry();
          var len = c.min === c.max ? c.min + ' digits' : c.min + '-' + c.max + ' digits';
          mobileInput.placeholder = len + ' (e.g. 9876543210)';
        }

        ccSelect.addEventListener('change', function() { updateMobilePlaceholder(); validateMobileNow(); });
        emailBtn.addEventListener('click', function(e) { e.preventDefault(); setEmail(); emailInput.focus(); });
        mobileBtn.addEventListener('click', function(e) { e.preventDefault(); setMobile(); mobileInput.focus(); });

        emailInput.addEventListener('blur', function() {
          var v = emailInput.value.trim();
          if (!v) { emailHint.textContent = 'Used by others to find and add you as a contact'; emailHint.classList.remove('error'); return; }
          if (!/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(v)) { emailHint.textContent = 'Enter a valid email address'; emailHint.classList.add('error'); }
          else { emailHint.textContent = ''; emailHint.classList.remove('error'); }
        });

        function validateMobileNow() {
          var digits = mobileInput.value.replace(/\D/g, '');
          if (!digits) { mobileHint.textContent = 'Used by others to find and add you as a contact'; mobileHint.classList.remove('error'); return false; }
          var result = CC.validateMobileLength(ccSelect.value, digits);
          if (!result.valid) { mobileHint.textContent = result.msg; mobileHint.classList.add('error'); return false; }
          mobileHint.textContent = ''; mobileHint.classList.remove('error'); return true;
        }
        mobileInput.addEventListener('blur', function() { validateMobileNow(); });

        form.addEventListener('submit', function(e) {
          if (contactType.value === 'email') {
            var v = emailInput.value.trim();
            if (!/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(v)) {
              e.preventDefault();
              emailHint.textContent = 'Enter a valid email address'; emailHint.classList.add('error');
              emailInput.focus();
              return;
            }
          } else {
            var digits = mobileInput.value.replace(/\D/g, '');
            var c = getSelectedCountry();
            var result = CC.validateMobileLength(ccSelect.value, digits);
            if (!result.valid) {
              e.preventDefault();
              mobileHint.textContent = result.msg; mobileHint.classList.add('error');
              mobileInput.focus();
              return;
            }
            var fullNumber = c.dial + digits;
            var hidden = document.getElementById('mobile_full');
            if (!hidden) {
              hidden = document.createElement('input');
              hidden.type = 'hidden'; hidden.id = 'mobile_full'; hidden.name = 'contact_value';
              form.appendChild(hidden);
            }
            hidden.value = fullNumber;
          }
        });
      })();
      </script>

      <p class="auth-link">Already have an account? <a href="/login">Sign in</a></p>
    </div>
  </div>
</body>
</html>
