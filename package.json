{
  "name": "kinnect",
  "version": "1.0.0",
  "description": "Real-time GPS location tracking with rooms, contacts, SOS, geofencing, and live sharing",
  "main": "backend/index.js",
  "scripts": {
    "start": "node backend/index.js",
    "start:local": "npm run build && node backend/index.js",
    "build": "VITE_TARGET=web npm run build:frontend",
    "build:frontend": "cd frontend && npx vite build",
    "dev:fe": "cd frontend && npx vite",
    "dev:be": "node backend/index.js",
    "test": "jest --forceExit --detectOpenHandles",
    "lint": "eslint backend/ test/",
    "build:android": "cd frontend && VITE_TARGET=capacitor npx vite build && npx cap sync android",
    "run:android": "cd frontend && npx cap run android",
    "apk:release": "cd frontend/android && ./gradlew clean assembleRelease",
    "aab:release": "cd frontend/android && ./gradlew clean bundleRelease",
    "build:ios": "cd frontend && VITE_TARGET=capacitor npx vite build && npx cap sync ios",
    "run:ios": "cd frontend && npx cap run ios"
  },
  "keywords": [
    "realtime",
    "tracking",
    "gps",
    "socket.io",
    "leaflet"
  ],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": "20.x"
  },
  "dependencies": {
    "@capacitor/app": "^8.0.1",
    "@capacitor/core": "^8.1.0",
    "@capacitor/geolocation": "^8.1.0",
    "@socket.io/redis-adapter": "^8.3.0",
    "@sveltejs/vite-plugin-svelte": "^5.1.1",
    "bcrypt": "^6.0.0",
    "compression": "^1.8.1",
    "connect-pg-simple": "^10.0.0",
    "dotenv": "^17.3.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "express-session": "^1.17.3",
    "helmet": "^8.1.0",
    "ioredis": "^5.9.3",
    "leaflet": "^1.9.4",
    "pg": "^8.18.0",
    "pino": "^9.14.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.3",
    "socket.io-msgpack-parser": "^3.0.2",
    "svelte": "^5.51.2",
    "svelte-spa-router": "^4.0.1",
    "vite": "^6.4.1"
  },
  "devDependencies": {
    "eslint": "^9.39.2",
    "jest": "^29.7.0",
    "supertest": "^7.2.2"
  }
}
